namespace tirgol
{
    class Program
    {
        static void Main()
        {
            int num1, num2; // קלוט שני מספרים שלמים 
            Console.Write("Enter first number: ");// הודעת פלט 
            num1 = int.Parse(Console.ReadLine());//  הוראת קלט, הוראה שקולטת ערך שלם ומכניסה אותו לתוך משתנה num1
            Console.Write("Enter second number: ");
            num2 = int.Parse(Console.ReadLine());

            Console.WriteLine("the two numbers are:{0} {1}", num1, num2 );// הוראת פלט שמשלבת את ערכי המשתנים 
     
            

        }
    }
}
